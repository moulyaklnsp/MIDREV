<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ChessHive</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet">

    <!-- Linking External CSS -->
    <link rel="stylesheet" href="/css/primary_styles.css">
</head>
<body>

    <!-- Include Header Partial -->
    <%- include('./partials/dashboards/login/header') %>


    <main>
        <!-- Login Form Container -->
        <div class="form-container-login">
            <div class="form-box loginForm">
                <h2>Login to ChessHive</h2>
                <form action="/login" method="POST">
                    <!-- Email -->
                    <label for="email">Email ID:</label>
                    <input type="email" id="email" name="email" required>

                    <!-- Password -->
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>

                    <!-- Role -->
                    <label for="role">Select Role:</label>
                    <select id="role" name="role">
                        <option value="admin">Admin</option>
                        <option value="organizer">Organizer</option>
                        <option value="coordinator">Coordinator</option>
                        <option value="player">Player</option>
                    </select>

                    <!-- Submit Button -->
                    <button type="submit">Login</button>
                </form>
            </div>

            <!-- Sign Up Redirect -->
            <div class="signup-box">
                <p>Don't have an account?</p>
                <a href="/signup"><button>Sign Up</button></a>
            </div>
        </div>
    </main>

    <!-- Include Footer Partial -->
    <%- include('./partials/dashboards/login/footer') %>
</body>
</html>
