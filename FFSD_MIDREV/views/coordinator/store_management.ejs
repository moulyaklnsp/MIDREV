<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Management</title>
    <link rel="stylesheet" href="/css/primary_styles.css">
</head>
<body>
<div class="container">
    <div class="form-container">
        <h2>Store Management</h2>
        <form action="/coordinator/add-product" method="POST">
            <label>Product Name:</label>
            <input type="text" name="productName" required>
            <label>Price:</label>
            <input type="number" name="productPrice" required>
            <label>Image URL:</label>
            <input type="text" name="productImage" required>
            <label>Coordinator Name:</label>
            <input type="text" name="coordinatorName" required>
            <label>College Name:</label>
            <input type="text" name="collegeName" required>
            <button type="submit">Add Product</button>
        </form>
    </div>

    <div>
        <h2 class="black-h2">Products List</h2>
        <div class="product-card">
            <% if (typeof products !== "undefined" && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-image">
                        <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                    </div>
                    <div class="product-item product-info">
                        <h4><%= product.name %></h4>
                        <p class="price">Price: <%= product.price %></p>
                        <p class="added-by">Added by: <%= product.coordinator %> (<%= product.college %>)</p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products available.</p>
            <% } %>
        </div>
        <div class="form-container back-container">
            <a href="/coordinator/coordinator_dashboard" class="back">Back to Dashboard</a>
        </div>
    </div>
</div>
</body>
</html>
